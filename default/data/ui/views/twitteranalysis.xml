  <row>
    <panel>
      <title>Latest Tweets</title>
      <table id="myCustomTable">
        <search>
          <query>| mongo s="$q$" earliest="$earliest$" limit=$limit$ | `sentiment_analysis` | heat twitter text | table _time, user_screen_name, text, user_profile_image_url, sentiment, heat, entities_media_media_url</query>
