<form script="custom.js">
  <label>TwitterAnalysis</label>
  <fieldset submitButton="true" autoRun="false">
    <input type="text" token="earliest" searchWhenChanged="true">
      <label>From</label>
      <default>2018-01-01</default>
    </input>
    <input type="text" token="limit" searchWhenChanged="true">
      <label>Limit</label>
      <default>20</default>
    </input>
    <input type="text" token="q" searchWhenChanged="true">
      <label>Search</label>
      <default></default>
